                    <EditText
                        android:id="@+id/an_x4"
                        style="@style/SettingCustomerLanAn" />
                </TableRow>
            </TableRow>
            <TableRow
                style="@style/ViewItemSettingCustomer">
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
