                    android:layout_marginLeft="@dimen/dimen_12dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
