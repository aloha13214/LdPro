<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:text="@string/str_title_khong_nhan_so"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginVertical="@dimen/dimen_8dp"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView style="@style/HeaderSettingCustomer"
                android:text="Khống nhận đề"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_margin="8dp"
                android:background="@drawable/bg_edit_text"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:singleLine="false"
                    android:maxLines="4"
                    android:id="@+id/edt_dan_de"
                    android:height="100dp"
                    android:background="@null"
                    android:padding="@dimen/dimen_8dp"
                    android:textSize="@dimen/dimen_14sp"
                    android:layout_marginRight="@dimen/dimen_40dp"
                    android:hint="@string/str_khong_nhan_de"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_40dp" />

                <ImageView
                    android:id="@+id/iv_clear_de"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginRight="@dimen/dimen_8dp"
                    android:src="@drawable/ic_clear" />
            </FrameLayout>
            <TextView style="@style/HeaderSettingCustomer"
                android:text="Khống nhận lô"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_margin="8dp"
                android:background="@drawable/bg_edit_text"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:singleLine="false"
                    android:maxLines="4"
                    android:height="100dp"
                    android:padding="@dimen/dimen_8dp"
                    android:id="@+id/edt_dan_lo"
                    android:layout_marginEnd="@dimen/dimen_40dp"
                    android:textSize="@dimen/dimen_14sp"
                    android:background="@null"
                    android:hint="@string/str_khong_nhan_de"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_40dp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_clear"
                    android:id="@+id/iv_clear_dan_lo"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginRight="@dimen/dimen_8dp"
                    android:layout_height="wrap_content"/>
            </FrameLayout>

            <TextView style="@style/HeaderSettingCustomer"
                android:layout_marginBottom="@dimen/dimen_8dp"
                android:text="Khống nhận Xiên, Ba càng"/>
            <TableRow android:layout_width="match_parent"
                android:paddingHorizontal="@dimen/dimen_8dp"
                android:layout_height="wrap_content">
                <TableRow android:layout_width="@dimen/dimen_0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView android:layout_width="@dimen/dimen_56dp"
                        android:text="Xiên 2:"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"/>
                    <FrameLayout android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_edit_text"
                        android:layout_height="@dimen/dimen_40dp">
                        <EditText android:layout_width="match_parent"
                            android:layout_marginLeft="@dimen/dimen_8dp"
                            android:singleLine="true"
                            android:id="@+id/edt_giu_xien_2"
                            android:textSize="@dimen/dimen_14sp"
                            android:inputType="number"
                            android:background="@null"
                            android:layout_marginRight="@dimen/dimen_30dp"
                            android:paddingHorizontal="@dimen/dimen_4dp"
                            android:layout_height="match_parent"/>
                        <ImageView
                            android:layout_width="@dimen/dimen_20dp"
                            android:layout_marginRight="@dimen/dimen_4dp"
                            android:src="@drawable/ic_clear"
                            android:id="@+id/iv_clear_xien_2"
                            android:layout_gravity="center_vertical|end"
                            android:layout_height="@dimen/dimen_20dp"/>
                    </FrameLayout>
                </TableRow>
                <View android:layout_width="8dp"
                    android:layout_height="@dimen/dimen_0dp"/>
                <TableRow android:layout_width="@dimen/dimen_0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView android:layout_width="@dimen/dimen_56dp"
                        android:text="Xiên 4:"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"/>
                    <FrameLayout android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_edit_text"
                        android:layout_height="@dimen/dimen_40dp">
                        <EditText android:layout_width="match_parent"
                            android:layout_marginLeft="@dimen/dimen_8dp"
                            android:singleLine="true"
                            android:id="@+id/edt_giu_xien_4"
                            android:textSize="@dimen/dimen_14sp"
                            android:inputType="number"
                            android:background="@null"
                            android:layout_marginRight="@dimen/dimen_30dp"
                            android:paddingHorizontal="@dimen/dimen_4dp"
                            android:layout_height="match_parent"/>
                        <ImageView
                            android:layout_width="@dimen/dimen_20dp"
                            android:layout_marginRight="@dimen/dimen_4dp"
                            android:src="@drawable/ic_clear"
                            android:id="@+id/iv_clear_xien_4"
                            android:layout_gravity="center_vertical|end"
                            android:layout_height="@dimen/dimen_20dp"/>
                    </FrameLayout>
                </TableRow>
            </TableRow>
            <View
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="@dimen/dimen_8dp"/>
            <TableRow android:layout_width="match_parent"
                android:paddingHorizontal="@dimen/dimen_8dp"
                android:layout_height="wrap_content">
                <TableRow android:layout_width="@dimen/dimen_0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView android:layout_width="@dimen/dimen_56dp"
                        android:text="Xiên 3:"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"/>
                    <FrameLayout android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_edit_text"
                        android:layout_height="@dimen/dimen_40dp">
                        <EditText android:layout_width="match_parent"
                            android:layout_marginLeft="@dimen/dimen_8dp"
                            android:singleLine="true"
                            android:id="@+id/edt_giu_xien_3"
                            android:textSize="@dimen/dimen_14sp"
                            android:inputType="number"
                            android:background="@null"
                            android:layout_marginRight="@dimen/dimen_30dp"
                            android:paddingHorizontal="@dimen/dimen_4dp"
                            android:layout_height="match_parent"/>
                        <ImageView
                            android:layout_width="@dimen/dimen_20dp"
                            android:layout_marginRight="@dimen/dimen_4dp"
                            android:src="@drawable/ic_clear"
                            android:id="@+id/iv_clear_xien_3"
                            android:layout_gravity="center_vertical|end"
                            android:layout_height="@dimen/dimen_20dp"/>
                    </FrameLayout>
                </TableRow>
                <View android:layout_width="8dp"
                    android:layout_height="@dimen/dimen_0dp"/>
                <TableRow android:layout_width="@dimen/dimen_0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView android:layout_width="@dimen/dimen_56dp"
                        android:text="Càng:"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"/>
                    <FrameLayout android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_edit_text"
                        android:layout_height="@dimen/dimen_40dp">
                        <EditText android:layout_width="match_parent"
                            android:layout_marginLeft="@dimen/dimen_8dp"
                            android:singleLine="true"
                            android:id="@+id/edt_giu_3_cang"
                            android:textSize="@dimen/dimen_14sp"
                            android:inputType="number"
                            android:background="@null"
                            android:layout_marginRight="@dimen/dimen_30dp"
                            android:paddingHorizontal="@dimen/dimen_4dp"
                            android:layout_height="match_parent"/>
                        <ImageView
                            android:layout_width="@dimen/dimen_20dp"
                            android:layout_marginRight="@dimen/dimen_4dp"
                            android:src="@drawable/ic_clear"
                            android:id="@+id/iv_clear_cang"
                            android:layout_gravity="center_vertical|end"
                            android:layout_height="@dimen/dimen_20dp"/>
                    </FrameLayout>
                </TableRow>
            </TableRow>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>
    <TableRow android:layout_width="match_parent"
        android:paddingHorizontal="@dimen/dimen_8dp"
        android:layout_marginVertical="@dimen/dimen_8dp"
        android:layout_height="wrap_content">
        <Button android:layout_width="@dimen/dimen_0dp"
            style="@style/ButtonInApp"
            android:textSize="@dimen/dimen_12sp"
            android:layout_height="@dimen/dimen_40dp"
            android:text="Lưu/Sửa"
            android:id="@+id/btn_save"
            android:layout_weight="1"/>
    </TableRow>
</androidx.appcompat.widget.LinearLayoutCompat>

